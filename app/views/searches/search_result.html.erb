<h2>Results index</h2>

<table class="table table-hover table-inverse">

  <% if @range == "User" %>
  
    <tr>
      <th>name</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
    <% end %>
    
  <% else %>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    
  <% end %>
</table>